<%- include("partials/header") -%>

<h1>Compose</h1>
<form method="post" action="/compose">
  <div class="form-group">
    <label class="form-label" for="postTitle" >Title</label>
    <input class="form-control" type="text" name="postTitle" id="postTitle" autofocus autocomplete="off" required>
  </div>
  <div class="form-group">
    <label class="form-label" for="postContent">Post</label>
    <textarea class="form-control" name="postContent" id="postContent" rows="5" cols="80" required></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer") -%>
